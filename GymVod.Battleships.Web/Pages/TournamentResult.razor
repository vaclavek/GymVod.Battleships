@page "/tournamentresult/{tournamentId:int}"
@inherits Components.Pages.TournamentResultComponent

<h1>Seznam turnajů</h1>

<h4>Turnaj @Tournament.Created, @Tournament.League</h4>
<div class="form-group">
    <label class="col-form-label">Počet her:</label>
    <div class="col-sm-10">@Tournament.Games.Count</div>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Hráč 1</th>
            <th scope="col">Hráč 2</th>
            <th scope="col">Počet kol</th>
            <th scope="col">Vyhrál</th>
            <th scope="col">Chyba</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Tournament.Games)
        {
            <tr>
                <td>@game.Player1Name</td>
                <td>@game.Player2Name</td>
                <td>@game.RoundsCount</td>
                <td>@game.WhichPlayerWins</td>
                <td>@game.ErrorMessage</td>
            </tr>
        }
    </tbody>
</table>